<h1>All Flats</h1>

<div class="container">

    <% @flats.each do |flat|%>

      <div class="p-2 m-2 border">

        <div>
          <p>Name: <%= link_to flat.name, flat_path(flat) %></p>
          <p>Address <%= flat.address %></li>
        </div>

        <div>
          <%= image_tag "https://picsum.photos/400/300?random=#{flat.id}" %>
        </div>

      </div>

    <% end %>

</div>



